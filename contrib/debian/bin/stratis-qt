#!/bin/sh

set -e

umask 077

basedir=~/.wincoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/wincoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# WinCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/wincoin/wincoin-qt "$@"
